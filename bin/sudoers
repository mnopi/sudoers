#!/bin/sh

# Patches sudo with -i option and manages sudoers
#
version="0.0.1"
. strict.lib 2>/dev/null || { set -eu; PATH="$("$(dirname "${0}")/colon")" && export PATH && . strict.lib; }

main() {
  for arg do
    case "${arg}" in
      -h|--help) usage "${0}"; exit ;;
      --desc) desc "${0}"; exit ;;
      --version) echo "${version}"; exit ;;
      *) dir="${arg}"; break ;;
    esac
  done
}

main "${@:-}"
