#!/bin/sh

# Show help for script (absolute path) or executable (in PATH).
#
. strict.lib 2>/dev/null || { set -eu; PATH="$("$(dirname "${0}")/colon")" && export PATH && . strict.lib; }
. die.lib

main() {
  cmd="${1##*/}"
  command -v man >/dev/null || die Command Not Found: man
  man -P cat "${cmd}" 2>/dev/null || die Man Page Not Found: "${cmd}"
  exit
}

for arg do
  case "${arg}" in
    -h|--help) main "${0}" ;;
    --desc) desc "${0}" ;;
    --version) sudoers --version ;;
  esac
  exit
done
